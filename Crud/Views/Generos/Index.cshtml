@model List<Crud.Models.Genero>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Descripicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripicion)
            </td>
            <td>
                @if (item.Estado == 1)
                {
                    <label>Activado</label>
                }
                else
                {
                    <label>Desactivado</label>
                }
                
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Codigo }, new { onclick = "return confirm('¿Esta seguro de editar?');" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Codigo }, new { onclick = "return confirm('¿Desea ver lo registrado?');" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Codigo }, new { onclick = "return confirm('¿Esta seguro que desea borrarlo?');" }) |
                @if (item.Estado == 1)
                {
                    @Html.ActionLink("Desactivar", "Desactivar", new { id = item.Codigo }, new { onclick = "return confirm('¿Esta seguro que desea cambiar el estado?');" })
                }
                else
                {
                    @Html.ActionLink("Activar", "Activar", new { id = item.Codigo }, new { onclick = "return confirm('¿Esta seguro que desea cambiar el estado?');" })
                }
            </td>
        </tr>
}
    </tbody>
</table>
